<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Player API Suite" parallel="tests" thread-count="${thread.count}">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="listeners.TestListener"/>
    </listeners>

    <test name="Create Player Tests">
        <classes>
            <class name="tests.PlayerCreateTests"/>
        </classes>
    </test>

    <test name="Update Player Tests">
        <classes>
            <class name="tests.PlayerUpdateTests"/>
        </classes>
    </test>

    <test name="Get Player Tests">
        <classes>
            <class name="tests.PlayerGetTests"/>
        </classes>
    </test>

    <test name="Delete Player Tests">
        <classes>
            <class name="tests.PlayerDeleteTests"/>
        </classes>
    </test>
</suite>